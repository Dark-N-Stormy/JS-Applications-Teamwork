<div id="registerModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Register</h4>
            </div>
            <div class="modal-body">
                {{#if error}}
                    <div class="panel panel-danger">
                        <div class="panel-body">
                            {{errorMessage}}
                        </div>
                    </div>
                {{/if}}
                <form role='form' action="/register" method="post" style='max-width: 300px;'>
                    <input type="text" style="display: none">
                    <input type="password" style="display: none">
                    <input type="password" style="display: none">
                    <div class="form-group">
                        <input type="text" class="form-control" type='text' name="username" placeholder='Username'>
                    </div>
                    <div class="form-group">
                        <input type='password' name="password" placeholder='Password' class="form-control">
                    </div>
                    <div class="form-group">
                        <input type='password' name="password-repeat" placeholder='Repeat password' class="form-control">
                    </div>
                    <button type='submit' class="btn btn-primary">Register<img src="/images/spinner.gif" class="spinner"></button>
                </form>
            </div>
        </div>
    </div>
</div>

